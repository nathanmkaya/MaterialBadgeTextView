<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/content_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            tools:context="sample.badgeview.starry.matrixxun.com.materialbadgetextview.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hello World!" />

    <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#EF4738"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:text="0" />


    <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#EF4738"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        android:text="3" />

    <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#427fed"
        android:textColor="@android:color/white"
        android:text="9"
        android:textSize="12sp"/>

    <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#36b100"
        android:textColor="@android:color/white"
        android:text="6123456789012"
        android:textSize="25sp"/>

    <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="57"
        android:background="#FB8C00"
        android:textSize="14sp"/>

    <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_text"
        android:layout_marginTop="16dp"
        android:text="99+"
        android:textColor="@android:color/white"
        android:background="#EF4738"
        android:textSize="16sp"/>

    <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="MaterialBadgeTextView"
        android:background="#FB8C00"
        android:textSize="16sp"/>

    <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
        android:id="@+id/just_new_feature"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EF4738"/>

</LinearLayout>
</ScrollView>